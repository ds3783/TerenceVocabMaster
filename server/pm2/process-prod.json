{
    "apps": [
        {
            "name": "GetRich",
            "script": "./src/bin/cluster.mjs",
            "watch": false,
            "instances": 1,
            "exec_mode": "fork",
            "node_args": "--experimental-modules --expose-gc --max-old-space-size=512",
            "error_file": "./logs/console-err.log",
            "out_file": "./logs/console-out.log",
            "merge_logs": true,
            "log_date_format": "YYYY-MM-DD HH:mm:ss",
            "env": {
                "MANIFEST": "prod",
                "PORT": 3100
            }
        }
    ]
}